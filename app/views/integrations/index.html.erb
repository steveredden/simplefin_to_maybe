<% content_for :title, "Integrations" %>
<br>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h2 class="text-2xl font-semibold mb-4">Integrations</h2>
    <%= link_to "New integration", new_integration_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="integrations" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @integrations.any? %>
      <table class="bg-white shadow-md rounded-lg overflow-hidden">
        <thead>
          <tr class="bg-gray-200">
            <th class="py-2 px-4 border-b text-left">Name</th>
            <th class="py-2 px-4 border-b text-left">Type</th>
            <th class="py-2 px-4 border-b text-left">Credentials</th>
            <th class="py-2 px-4 border-b text-center"></th>
          </tr>
        </thead>
        <tbody>
          <% @integrations.order(:created_at).each do |integration| %>
          <tr class="hover:bg-gray-100">
            <td class="py-2 px-4 border-b"><%= integration.name %></td>
            <td class="py-2 px-4 border-b"><%= integration.description %></td>
            <td class="py-2 px-4 border-b text-center"><%= integration.credentials %></td>
            <td class="py-2 px-4 border-b text-center">
              <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
                <%= link_to "Show", integration, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
                <%= link_to "Edit", edit_integration_path(integration), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
                <div class="sm:inline-block">
                  <%= button_to "Destroy", integration, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
                </div>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center my-10">No integrations found.</p>
    <% end %>
  </div>
</div>
