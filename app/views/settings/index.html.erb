<!-- Simplefin Settings Table -->
<br>
<h2 class="text-2xl font-medium text-gray-700 mb-4">SimpleFIN Settings</h1>
<table class="settings-table">
  <thead>
    <tr>
      <th class="text-left border">Setting</th>
      <th class="text-right border">Value</th>
    </tr>
  </thead>
  <tbody>
    <% ["simplefin_username", "simplefin_password"].each do |key| %>
      <% setting = Setting.find_by(key: key) %>
      <% if setting %>
        <tr>
          <td class="text-left border"><%= setting.display_name %></td>
          <td class="text-right border">
            <% if setting.value.present? %>
              *********
            <% else %>
              <span class="blinking-undefined">undefined</span>
            <% end %>
          </td>
          <td class="w-auto border-none">
            <button class="openModalBtn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400" display-name="<%= setting.display_name %>" data-key="<%= setting.key %>" data-value="<%= setting.value %>" ecrypted="<%= setting.encrypted %>">Edit</button>
          </td>
        </tr>
      <% end %>
    <% end %>
    <tr>
      <td class="text-left border">Accounts Retrieved</td>
      <td class="text-right border">
        <%= link_to accounts_path, class: "text-blue-500 hover:text-blue-700 p-1.5" do %>
          <%= Account.where(account_type: "simplefin").count %>
        <% end %>
      </td>
      <td class="w-auto border-none"><button class="text-white px-4 py-2 rounded">Edit</button></td>
    </tr>
  </tbody>
</table>

<br>
<button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400" id="test_simplefin_button">Retrieve SimpleFIN Accounts</button>
<img id="simplefin_loading_spinner" style="display: none;" src="<%= asset_path('fe718d-transparent-spinner.gif') %>" alt="Loading..." class="spinner" />
<br><div id="simplefin_test_result"></div><br><br>

